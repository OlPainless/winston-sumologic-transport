{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": [
    "./cleanup/**/*",
    "./src/**/*",
    "./test/**/*"
  ]
}
